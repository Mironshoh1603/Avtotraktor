{
  "name": "backend",
  "version": "0.0.1",
  "description": "NestJS backend build with pkg",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "main": "dist/main.js",
  "bin": "dist/main.js",
  "scripts": {
    "build": "nest build",
    "start": "nest start",
    "start:prod": "node dist/main.js",
    "pkg:build": "npm run build && pkg ."
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/serve-static": "^5.0.3",
    "@nestjs/swagger": "^11.0.6",
    "@nestjs/typeorm": "^11.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "dotenv": "^16.4.7",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.27"
  },
  "pkg": {
    "scripts": [
      "dist/**/*.js"
    ],
    "assets": [
      "dist/**/*.json",
      "dist/**/*.hbs",
      ".env"
    ],
    "targets": [
      "node18-win-x64"
    ],
    "outputPath": "build",
    "output": "build/backend.exe"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "pkg": "^5.8.1",
    "typescript": "^5.1.3"
  }
}
